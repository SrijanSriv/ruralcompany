generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Facility {
  facility_id    Int       @id @default(autoincrement())
  facility_name  String
  facility_cost  Float
  facility_time  Int       // Determines slot size
}

model Provider { // provider is a person that does a facility, e.g carpenter, plumber, etc
  provider_id   Int        @id @default(autoincrement())
  provider_name String
  provider_phone String
  facility_id    Int
}

model Reservation {
  reservation_id  Int       @id @default(autoincrement())
  facility_id     Int
  provider_id     Int
  reservation_date String
  timeslot_start  Int
  timeslot_end    Int
  total_cost      Float
  user_id         Int
}

model User {
  user_id   Int     @id @default(autoincrement())
  username  String
  email     String  @unique
  password  String
}
